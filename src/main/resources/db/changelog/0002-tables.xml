                    <columnExists tableName="users" columnName="medical_history"/>
                </not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM users WHERE email = 'admin@medibook.com'
                </sqlCheck>
            </and>
        </preConditions>
        <insert tableName="users">
