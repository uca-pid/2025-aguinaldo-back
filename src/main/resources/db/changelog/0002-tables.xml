<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- USERS -->
    <changeSet id="0002-01-users" author="MediBook_Admin">
        <createTable tableName="users">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="citext">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="dni" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="text"/>
            <column name="birthdate" type="date"/>
            <column name="gender" type="text"/>
            <column name="email_verified" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <column name="medical_history" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="text" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="text" defaultValue="PATIENT">
                <constraints nullable="false"/>
            </column>
            <column name="score" type="numeric(3,2)"/>
        </createTable>
    </changeSet>

    <!-- DOCTOR PROFILES -->
    <changeSet id="0002-05-doctor_profiles" author="MediBook_Admin">
        <createTable tableName="doctor_profiles">
            <column name="user_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="medical_license" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="specialty" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="slot_duration_min" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="availability_schedule" type="json">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="doctor_profiles" baseColumnNames="user_id"
                                constraintName="fk_doctor_profiles_user"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="CASCADE"/>
    </changeSet>

    <!-- TURNS ASSIGNED -->
    <changeSet id="0002-09-turns_assigned" author="MediBook_Admin">
        <createTable tableName="turns_assigned">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="doctor_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="patient_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="scheduled_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="motive" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="text" defaultValue="SCHEDULED">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="turns_assigned" baseColumnNames="doctor_id"
                                constraintName="fk_turns_assigned_doctor"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="turns_assigned" baseColumnNames="patient_id"
                                constraintName="fk_turns_assigned_patient"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="RESTRICT"/>
    </changeSet>

    <!-- REFRESH TOKENS -->
    <changeSet id="0002-06-refresh_tokens" author="MediBook_Admin">
        <createTable tableName="refresh_tokens">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="token_hash" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="user_agent" type="text"/>
            <column name="ip_address" type="inet"/>
            <column name="expires_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="revoked_at" type="timestamptz"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="refresh_tokens" baseColumnNames="user_id"
                                constraintName="fk_refresh_tokens_user"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="CASCADE"/>
    </changeSet>

    <!-- EMAIL VERIFICATIONS -->
    <changeSet id="0002-07-email_verifications" author="MediBook_Admin">
        <createTable tableName="email_verifications">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="code_hash" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="consumed_at" type="timestamptz"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="email_verifications" baseColumnNames="user_id"
                                constraintName="fk_email_verifications_user"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="CASCADE"/>
    </changeSet>

    <!-- PASSWORD RESETS -->
    <changeSet id="0002-08-password_resets" author="MediBook_Admin">
        <createTable tableName="password_resets">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="code_hash" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="consumed_at" type="timestamptz"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="password_resets" baseColumnNames="user_id"
                                constraintName="fk_password_resets_user"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="CASCADE"/>
    </changeSet>

    <!-- TURN MODIFY REQUESTS -->
    <changeSet id="0002-10-turn_modify_requests" author="MediBook_Admin">
        <createTable tableName="turn_modify_requests">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="turn_assigned_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="patient_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="doctor_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="current_scheduled_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="requested_scheduled_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="text" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="turn_modify_requests" baseColumnNames="turn_assigned_id"
                                constraintName="fk_turn_modify_requests_turn_assigned"
                                referencedTableName="turns_assigned" referencedColumnNames="id"
                                onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="turn_modify_requests" baseColumnNames="patient_id"
                                constraintName="fk_turn_modify_requests_patient"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="RESTRICT"/>
        <addForeignKeyConstraint baseTableName="turn_modify_requests" baseColumnNames="doctor_id"
                                constraintName="fk_turn_modify_requests_doctor"
                                referencedTableName="users" referencedColumnNames="id"
                                onDelete="RESTRICT"/>
    </changeSet>

    <!-- MEDICAL HISTORY -->
    <changeSet id="0002-11-medical_history" author="MediBook_Admin">
        <createTable tableName="medical_history">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="patient_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="doctor_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Add foreign key constraints -->
        <addForeignKeyConstraint 
            baseTableName="medical_history" 
            baseColumnNames="patient_id" 
            constraintName="fk_medical_history_patient" 
            referencedTableName="users" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint 
            baseTableName="medical_history" 
            baseColumnNames="doctor_id" 
            constraintName="fk_medical_history_doctor" 
            referencedTableName="users" 
            referencedColumnNames="id"
            onDelete="CASCADE"/>

        <!-- Create indexes for better performance -->
        <createIndex indexName="idx_medical_history_patient_id" tableName="medical_history">
            <column name="patient_id"/>
        </createIndex>

        <createIndex indexName="idx_medical_history_doctor_id" tableName="medical_history">
            <column name="doctor_id"/>
        </createIndex>

        <createIndex indexName="idx_medical_history_created_at" tableName="medical_history">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <!-- MIGRATE MEDICAL HISTORY DATA AND REMOVE OLD COLUMN -->
    <changeSet id="0002-12-migrate_medical_history" author="MediBook_Admin">
        <comment>Migrate existing medical history data from users table to medical_history table</comment>
        
        <!-- Migrate existing medical history data -->
        <!-- Note: This migration assigns the first available doctor for migration purposes -->
        <!-- In production, you might want to create a migration script that properly assigns doctors -->
        <sql>
            INSERT INTO medical_history (id, patient_id, doctor_id, content, created_at, updated_at)
            SELECT 
                uuid_generate_v4(),
                u.id,
                (SELECT id FROM users WHERE role = 'DOCTOR' AND status = 'ACTIVE' LIMIT 1), -- Use first available doctor
                u.medical_history,
                now(),
                now()
            FROM users u 
            WHERE u.role = 'PATIENT' 
                AND u.medical_history IS NOT NULL 
                AND u.medical_history != ''
                AND EXISTS (SELECT 1 FROM users WHERE role = 'DOCTOR' AND status = 'ACTIVE');
        </sql>

        <!-- Drop the medical_history column from users table -->
        <dropColumn tableName="users" columnName="medical_history"/>
    </changeSet>

    <!-- INSERT DEFAULT ADMIN USER (after schema changes) -->
