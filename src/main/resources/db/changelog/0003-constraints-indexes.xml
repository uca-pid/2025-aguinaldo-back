<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- CHECK: users.status -->
    <changeSet id="0003-01-users-status-check" author="MediBook_Admin">
        <sql>
            ALTER TABLE users ADD CONSTRAINT chk_users_status CHECK (status in ('ACTIVE','LOCKED','DISABLED'));
        </sql>
    </changeSet>

    <!-- INDEXES -->
    <changeSet id="0003-02-idx-user_roles-user" author="MediBook_Admin">
        <createIndex tableName="users" indexName="idx_user_roles_user">
            <column name="id"/>
            <column name="role"/>
        </createIndex>
    </changeSet>

    <changeSet id="0003-03-idx-refresh-user" author="MediBook_Admin">
        <createIndex tableName="refresh_tokens" indexName="idx_refresh_user">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="0003-04-idx-users-email" author="MediBook_Admin">
        <!-- email index for performance on lookups -->
        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="0003-05-create-dni-index" author="MediBook_Admin">
        <createIndex tableName="users" indexName="idx_users_dni">
            <column name="dni"/>
        </createIndex>
    </changeSet>

    <changeSet id="0003-06-idx-users-status" author="MediBook_Admin">
        <createIndex tableName="users" indexName="idx_users_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
